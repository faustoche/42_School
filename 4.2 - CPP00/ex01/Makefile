# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= phonebook

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

PHONE = 		contact.cpp phonebook.cpp main.cpp
SRCS = ${PHONE}
OBJS = ${SRCS:.cpp=.o}

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS)
	@echo "\033[1;33mðŸ”ˆ  COMPILING PHONEBOOK... ðŸ”ˆ\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32mðŸ’¾ ./$(NAME) created ðŸ’¾\n"

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@


# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS)
	@echo "\033[1;32mðŸ«§  DONE ðŸ«§"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mðŸ«§  FCLEAN DONE ðŸ«§"

re: fclean all
	@echo "\033[1;32mðŸ«§  RE DONE ðŸ«§"

.PHONY: all clean fclean re