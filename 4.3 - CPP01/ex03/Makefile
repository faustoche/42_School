# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= violence

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

VIOLENCE = 		main.cpp HumanA.cpp HumanB.cpp Weapon.cpp
SRCS = ${VIOLENCE}
OBJS = ${SRCS:.cpp=.o}

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra -std=c++98 
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS)
	@echo "\033[1;33m‚öîÔ∏è  COMPILING UNNECESSARY VIOLENCE ‚öîÔ∏è\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32m‚öîÔ∏è ./$(NAME) created ‚öîÔ∏è\n"

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@


# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS)
	@echo "\033[1;32mü´ß  DONE ü´ß"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mü´ß  FCLEAN DONE ü´ß"

re: fclean all
	@echo "\033[1;32mü´ß  RE DONE ü´ß"

.PHONY: all clean fclean re