# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= violence

# ************************************************************************ #
#                			     DIRECTORIES                               #
# ************************************************************************ #

INCLUDES		= includes
SRCS_DIR		= src
OBJS_DIR		= obj

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

VIOLENCE 		= $(addprefix $(SRCS_DIR)/, main.cpp\
					HumanA.cpp\
					HumanB.cpp\
					Weapon.cpp)
SRCS 			= ${VIOLENCE}
CPP_OBJS		= ${VIOLENCE:${SRCS_DIR}/%.cpp=$(OBJS_DIR)/%.o}
OBJS			= $(CPP_OBJS)

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra -std=c++98 -I$(INCLUDES)
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS_DIR) $(OBJS)
	@echo "\033[1;33m‚öîÔ∏è  COMPILING UNNECESSARY VIOLENCE ‚öîÔ∏è\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32m‚öîÔ∏è ./$(NAME) created ‚öîÔ∏è\n"

$(OBJS_DIR)/%.o: $(SRCS_DIR)/%.cpp
	@mkdir -p $(OBJS_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

$(OBJS_DIR):
	@mkdir -p $(OBJS_DIR)

# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS_DIR)
	@echo "\033[1;32mü´ß  DONE ü´ß"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mü´ß  FCLEAN DONE ü´ß"

re: fclean all
	@echo "\033[1;32mü´ß  RE DONE ü´ß"
