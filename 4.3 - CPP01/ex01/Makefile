# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= moarbrainz

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

ZOMBIE = 		main.cpp Zombie.cpp zombieHorde.cpp
SRCS = ${ZOMBIE}
OBJS = ${SRCS:.cpp=.o}

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra -std=c++98
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS)
	@echo "\033[1;33mðŸ§Ÿ  COMPILING MO...AR....BRAA....I..NZZZZZZ... ðŸ§Ÿ\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32mðŸ§Ÿ ./$(NAME) created ðŸ§Ÿ\n"

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@


# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS)
	@echo "\033[1;32mðŸ«§  DONE ðŸ«§"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mðŸ«§  FCLEAN DONE ðŸ«§"

re: fclean all
	@echo "\033[1;32mðŸ«§  RE DONE ðŸ«§"

.PHONY: all clean fclean re