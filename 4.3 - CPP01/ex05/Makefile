# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= harl

# ************************************************************************ #
#                			     DIRECTORIES                               #
# ************************************************************************ #

INCLUDES		= includes
SRCS_DIR		= src
OBJS_DIR		= obj

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

HARL 			= $(addprefix $(SRCS_DIR)/, main.cpp\
					Automating.cpp)
SRCS 			= ${HARL}
CPP_OBJS		= ${HARL:${SRCS_DIR}/%.cpp=$(OBJS_DIR)/%.o}
OBJS			= $(CPP_OBJS)

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra -std=c++98 -I$(INCLUDES)
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS_DIR) $(OBJS)
	@echo "\033[1;33mðŸ¤–  COMPILING HARL 2.0 ðŸ¤–\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32mðŸ¤– ./$(NAME) created ðŸ¤–\n"

$(OBJS_DIR)/%.o: $(SRCS_DIR)/%.cpp
	@mkdir -p $(OBJS_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

$(OBJS_DIR):
	@mkdir -p $(OBJS_DIR)

# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS_DIR)
	@echo "\033[1;32mðŸ«§  DONE ðŸ«§"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mðŸ«§  FCLEAN DONE ðŸ«§"

re: fclean all
	@echo "\033[1;32mðŸ«§  RE DONE ðŸ«§"
