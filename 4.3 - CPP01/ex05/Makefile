# ************************************************************************ #
#                			        MAIN                                   #
# ************************************************************************ #

NAME 		= harl

# ************************************************************************ #
#                			 SRCS && OBJECTS FILES                         #
# ************************************************************************ #

HARL = 		main.cpp automating.cpp
SRCS = ${HARL}
OBJS = ${SRCS:.cpp=.o}

# ************************************************************************ #
#                    			 COMPILATION                               #
# ************************************************************************ #

CC          = c++
CFLAGS      = -Wall -Werror -Wextra -std=c++98 
RM = rm -rf

# ************************************************************************ #
#                  		       	 PROCESS                                   #
# ************************************************************************ #

all:    $(NAME)

$(NAME):  $(OBJS)
	@echo "\033[1;33mðŸ¤–  COMPILING HARL 2.0 ðŸ¤–\n"
	@$(CC) $(OBJS) $(CFLAGS) -o $(NAME)
	@echo "\033[1;32mðŸ¤– ./$(NAME) created ðŸ¤–\n"

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@


# ************************************************************************ #
#                  		     CLEANUP SESSION                               #
# ************************************************************************ #

clean:
	@$(RM) $(OBJS)
	@echo "\033[1;32mðŸ«§  DONE ðŸ«§"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[1;32mðŸ«§  FCLEAN DONE ðŸ«§"

re: fclean all
	@echo "\033[1;32mðŸ«§  RE DONE ðŸ«§"

.PHONY: all clean fclean re